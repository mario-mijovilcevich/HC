@model HC.Models.PEGs

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PEGs</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PEGID)
        @Html.Hidden("HistoriaClinicaID")

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DatePickerFor(model => model.Fecha)
                @Html.ValidationMessageFor(model => model.Fecha)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Basal, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Basal)
                @Html.ValidationMessageFor(model => model.Basal)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaxEsf, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaxEsf)
                @Html.ValidationMessageFor(model => model.MaxEsf)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CfMax, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CfMax)
                @Html.ValidationMessageFor(model => model.CfMax)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CfUtil, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CfUtil)
                @Html.ValidationMessageFor(model => model.CfUtil)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Conclusion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Conclusion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Conclusion)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
