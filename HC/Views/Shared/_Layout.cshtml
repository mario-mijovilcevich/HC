<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <div class="container body-content">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">Link</a></li>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Separated link</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">One more separated link</a></li>
                                </ul>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </nav>
        </div>
        @if (Session.Keys.Count > 0)
        {
            <div class="container body-content">
                <ul class="nav nav-tabs nav-justified">
                    @if (ViewContext.RouteData.Values["controller"].ToString() == "Pacientes")
                    {
                        <li class="tab-pane fade in active">@Html.ActionLink("Paciente", "Details", "Pacientes")</li>}
                    else
                    {
                        <li class="tab-pane">@Html.ActionLink("Paciente", "Details", "Pacientes")</li>}

                    @if (ViewContext.RouteData.Values["controller"].ToString() == "HistoriasClinicas")
                    {
                        <li class="tab-pane fade in active">@Html.ActionLink("Historia Clínica", "Details", "HistoriasClinicas")</li>}
                    else
                    {
                        <li class="tab-pane">@Html.ActionLink("Historia Clínica", "Details", "HistoriasClinicas")</li>}

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Estudios <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" style="width: 100%; text-align: center">
                            <li>@Html.ActionLink("CCG", "Index", "CCGs")</li>
                            <li>@Html.ActionLink("ECO", "Index", "ECOs")</li>
                            <li>@Html.ActionLink("Laboratorios", "Index", "Laboratorios")</li>
                            <li>@Html.ActionLink("PEG", "Index", "PEGs")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Otros Estudios", "Index", "Estudios")</li>
                        </ul>
                    </li>

                    @if (ViewContext.RouteData.Values["controller"].ToString() == "Consultas")
                    {
                        <li class="tab-pane fade in active">@Html.ActionLink("Consultas", "Index", "Consultas")</li>}
                    else
                    {
                        <li class="tab-pane">@Html.ActionLink("Consultas", "Index", "Consultas")</li>}
                </ul>
            </div>
        }

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>